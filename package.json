    "cheerio": "^1.1.2",
    "cross-fetch": "^4.1.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.33.0",
    "eslint-config-next": "^15.4.6",
    "eslint-config-universe": "^15.0.3",
