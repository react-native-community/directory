    "next-compose-plugins": "^2.2.1",
    "next-fonts": "^1.5.1",
    "next-images": "^1.8.5",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.2",
    "user-agent-data-types": "^0.4.2"
  },
  "private": true,
  "simple-git-hooks": {
    "pre-commit": "bunx precommit"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "react-native-libraries.json": [
      "bun libraries:cleanup"
    ]
  }
