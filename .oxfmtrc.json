{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 100,
  "tabWidth": 2,
  "singleQuote": true,
  "bracketSameLine": true,
  "trailingComma": "es5",
  "arrowParens": "avoid",
  "endOfLine": "crlf",
  "ignorePatterns": [
    "**/.next",
    "**/.swc",
    "**/node_modules",
    "**/out",
    "**/public",
    "**/assets",
    "README.md",
    "next-env.d.ts"
  ]
}
